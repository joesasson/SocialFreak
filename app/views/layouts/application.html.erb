<!DOCTYPE html>
<html>
  <head>
    <title>SocialFreak</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'Social Freak', root_path, class: 'navbar-brand' %>
        </div>
        <div id="navbar">
          <% if current_user %>
            <ul class="nav navbar-nav pull-right">
              <li><%= image_tag current_user.image_url, alt: current_user.name %></li>
              <li><%= link_to "Log Out", logout_path, method: :delete %></li>
            </ul>
          <% else %>
          <ul class="nav navbar-nav pull-right">
            <li><%= link_to 'Log In with Twitter', '/auth/twitter' %></li>
            <li><%= link_to 'Log in with Google', '/auth/google' %></li>
            <li><%= link_to 'Log in with LinkedIn', '/auth/linkedin' %></li>
            <li><%= link_to 'Log in with Github', '/auth/github' %></li>
          </ul>
          <% end %>
        </div>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
